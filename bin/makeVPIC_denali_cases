#!/bin/bash

################################################################################################################################################################
# Intel optimized builds of master branch.

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_NONE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases using openmpi for the master branch V4 case

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V4_PORT
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V4_SSE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V4_AVX2
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases using openmpi for the master branch V8 case.

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V8_PORT
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V8_AVX2
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases using openmpi for the master branch V16 case.

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V16_PORT
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################################################################################################
# Intel optimized builds of master branch for use with VTune.

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_NONE_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases using openmpi for the master branch V4 case

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V4_PORT_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V4_SSE_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V4_AVX2_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases using openmpi for the master branch V8 case.

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V8_PORT_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V8_AVX2_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases using openmpi for the master branch V16 case.

ARCH=DENALI_MASTER_LINUX_INT_OPT_OPENMPI_V16_PORT_VTUNE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

################################################################################################################################################################
# GNU optimized builds of master branch.

ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_NONE
BRANCH=master_wdn_v8
