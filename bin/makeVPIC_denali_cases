#!/bin/bash

################################################################################
# Build the optimized Gnu cases using openmpi for the master branch.

#ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_V8_AVX2
#BRANCH=master_wdn_v8
#/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
#mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_V8_PORT
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_V8_NONE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_V4_SSE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_V4_PORT
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

ARCH=DENALI_MASTER_LINUX_GNU_OPT_OPENMPI_V4_NONE
BRANCH=master_wdn_v8
/usr/bin/time -p bin/makeVPIC_denali $ARCH $BRANCH 8 >& makeVPIC_denali.log
mv makeVPIC_denali.log build/$ARCH/vpic

