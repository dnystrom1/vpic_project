#!/bin/bash

################################################################################
# Preliminary stuff.

NJ=32

vtime="/usr/bin/time -p"

##########################################################################################
# Configure parameters that determine the value of the ARCH to be built.

################################################################################
# Select an MPI implementation to use.

VMPI="OMPI"

################################################################################
# Select a thread model to use.

VTHR="PTH"
#VTHR="OMP"

################################################################################
# Select the compiler to use.

VCOM="INT"
#VCOM="GNU"

################################################################################
# Select an optimized or debug build.

VOPT="OPT"
#VOPT="DBG"

################################################################################
# Select extra features to use. More than one can be selected.

FEAT=""
#FEAT+="_HIO"
FEAT+="_LSORT"
#FEAT+="_TSORT"
#FEAT+="_VTUNE"
#FEAT+="_TEST"
#FEAT+=""
#FEAT+=""
#FEAT+=""
#FEAT+=""

##########################################################################################
# Build Haswell ARCHs.

################################################################################
# Build the optimized Intel case for the master branch without vector support.

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V1_NONE${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases for the master branch with V4 support.

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V4_PORT${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V4_SSE${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V4_AVX2${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel cases for the master branch with V8 support.

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V8_PORT${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V8_AVX2${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

################################################################################
# Build the optimized Intel case for the master branch with V16 support.

ARCH=ICE_${VMPI}_${VTHR}_${VCOM}_${VOPT}_V16_PORT${FEAT}
BRANCH=knl_open_science
${vtime} bin/makeVPIC_ice $ARCH $FEAT $BRANCH $NJ >& makeVPIC_ice.log
mv makeVPIC_ice.log build/$ARCH/vpic

##########################################################################################
# Done.
