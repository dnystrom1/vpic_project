#!/bin/bash

################################################################################
# Build the optimized Gnu cases using openmpi for the master branch.

ARCH=KITTEN_MASTER_LINUX_GNU_OPT_OPENMPI_V8_AVX
BRANCH=master_wdn_vec_mods
/usr/bin/time -p bin/makeVPIC_kitten $ARCH $BRANCH 16 >& makeVPIC_kitten.log
mv makeVPIC_kitten.log build/$ARCH/vpic

ARCH=KITTEN_MASTER_LINUX_GNU_OPT_OPENMPI_V8_PORT
BRANCH=master_wdn_vec_mods
/usr/bin/time -p bin/makeVPIC_kitten $ARCH $BRANCH 16 >& makeVPIC_kitten.log
mv makeVPIC_kitten.log build/$ARCH/vpic

ARCH=KITTEN_MASTER_LINUX_GNU_OPT_OPENMPI_V4_SSE
BRANCH=master_wdn
/usr/bin/time -p bin/makeVPIC_kitten $ARCH $BRANCH 16 >& makeVPIC_kitten.log
mv makeVPIC_kitten.log build/$ARCH/vpic

ARCH=KITTEN_MASTER_LINUX_GNU_OPT_OPENMPI_V4_PORT
BRANCH=master_wdn
/usr/bin/time -p bin/makeVPIC_kitten $ARCH $BRANCH 16 >& makeVPIC_kitten.log
mv makeVPIC_kitten.log build/$ARCH/vpic

ARCH=KITTEN_MASTER_LINUX_GNU_OPT_OPENMPI_V4_NONE
BRANCH=master_wdn
/usr/bin/time -p bin/makeVPIC_kitten $ARCH $BRANCH 16 >& makeVPIC_kitten.log
mv makeVPIC_kitten.log build/$ARCH/vpic

