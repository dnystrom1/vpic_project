#!/bin/bash

################################################################################
# Set some high level variables.

ARCH=$1

BRANCH=$2

NJ=$3

VPIC_ROOT=$PWD

export VPIC_DIR=$VPIC_ROOT/build/$ARCH/vpic

################################################################################
# Switch to the build directory and copy the VPIC source.  First check for the
# existence of an old VPIC directory and remove it if it does exist.

cd build

if [ -d $ARCH ]; then
  rm -rf $ARCH
fi

mkdir $ARCH
cd $ARCH

cp -R $VPIC_ROOT/src/branches/$BRANCH/vpic .

cd $VPIC_DIR

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_MASTER_LINUX_GNU_OPT_IBM_MPI_V4_NONE" ]; then
  cd $VPIC_DIR
  config/bootstrap
  CXX=bgg++ CC=bggcc configure \
      --with-machine=standard_gnu_v4_none \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_MASTER_LINUX_GNU_OPT_IBM_MPI_V4_SSE" ]; then
  cd $VPIC_DIR
  config/bootstrap
  CXX=bgg++ CC=bggcc configure \
      --with-machine=standard_gnu_v4_sse \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_MASTER_LINUX_GNU_OPT_IBM_MPI_V4_PORT" ]; then
  cd $VPIC_DIR
  config/bootstrap
  CXX=bgg++ CC=bggcc configure \
      --with-machine=rzuseq_gnu_v4_port \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_MASTER_LINUX_IBM_OPT_IBM_MPI_V4_NONE" ]; then
  cd $VPIC_DIR
  config/bootstrap
  CXX=bgxlc++_r CC=bgxlc_r configure \
      --with-machine=rzuseq_ibm_v4_none \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_MASTER_LINUX_IBM_OPT_IBM_MPI_V4_SSE" ]; then
  cd $VPIC_DIR
  config/bootstrap
  CXX=bgxlc++_r CC=bgxlc_r configure \
      --with-machine=rzuseq_ibm_v4_sse \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_MASTER_LINUX_IBM_OPT_IBM_MPI_V4_PORT" ]; then
  cd $VPIC_DIR
  config/bootstrap
  CXX=bgxlc++_r CC=bgxlc_r configure \
      --with-machine=rzuseq_ibm_v4_port \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_TAG_407_LINUX_GNU_OPT_IBM_MPI_V4_SSE" ]; then
  cd $VPIC_DIR
  config/bootstrap
  configure \
      --with-machine=rzuseq_64 \
      --prefix=$VPIC_DIR
  make
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "RZUSEQ_TAG_407_LINUX_GNU_OPT_IBM_MPI_V4_PORT" ]; then
  cd $VPIC_DIR
  config/bootstrap
  configure \
      --with-machine=rzuseq_64_port \
      --prefix=$VPIC_DIR
  make
fi

################################################################################
