  module load intel
  module swap intel intel/$VERSION_INTEL
  module load intel-performance-tools
  module swap intel-performance-tools intel-performance-tools/$VERSION_INTEL_PERF_TOOLS

  module list

  export MPI_ROOT=$MPICH_DIR

  cd $VPIC_DIR
  mkdir build
  cd build
