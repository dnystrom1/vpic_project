################################################################################################################################################################

################################################################################
# Build an optimized version of VPIC with Intel compilers.

if [ $ARCH = "SNOW_OMP_INT_OPT_NONE" ]; then
  module load friendly-testing
  module load sandbox
  module load cmake
  module swap cmake cmake/$VERSION_CMAKE
  module load intel
  module swap intel intel/$VERSION_INTEL

  module list

  export MPI_ROOT=$MPICH_DIR

  cd $VPIC_DIR
  mkdir build
  cd build
  cmake \
    -LAH \
    -DCMAKE_BUILD_TYPE=None \
    -DENABLE_COLOR_UNIT_TESTS=ON \
    -DENABLE_INTEGRATED_TESTS=ON \
    -DENABLE_UNIT_TESTS=ON \
    -DVPIC_PRINT_MORE_DIGITS=ON \
    -DUSE_OPENMP=ON \
    -DUSE_PTHREADS=OFF \
    -DCMAKE_C_COMPILER=mpicc \
    -DCMAKE_CXX_COMPILER=mpicxx \
    -DCMAKE_C_FLAGS="-g -O3 -inline-forceinline -vec-threshold0 \
                     -qopt-report=5 -qopt-report-phase=all -Winline \
                     -qoverride-limits -rdynamic -dynamic" \
    -DCMAKE_CXX_FLAGS="-g -O3 -inline-forceinline -vec-threshold0 \
                       -qopt-report=5 -qopt-report-phase=all -Winline \
                       -qoverride-limits -rdynamic -dynamic" \
    ..
  make -j $NJ VERBOSE=1
fi

################################################################################
# Build an optimized version of VPIC with Intel compilers.

if [ $ARCH = "SNOW_OMP_INT_OPT_AVEC" ]; then
  module load friendly-testing
  module load sandbox
  module load cmake
  module swap cmake cmake/$VERSION_CMAKE
  module load intel
  module swap intel intel/$VERSION_INTEL

  module list

  export MPI_ROOT=$MPICH_DIR

  cd $VPIC_DIR
  mkdir build
  cd build
  cmake \
    -LAH \
    -DCMAKE_BUILD_TYPE=None \
    -DENABLE_COLOR_UNIT_TESTS=ON \
    -DENABLE_INTEGRATED_TESTS=ON \
    -DENABLE_UNIT_TESTS=ON \
    -DVPIC_PRINT_MORE_DIGITS=ON \
    -DUSE_OPENMP=ON \
    -DUSE_PTHREADS=OFF \
    -DUSE_ADVANCE_P_AUTOVEC=YES \
    -DCMAKE_C_COMPILER=mpicc \
    -DCMAKE_CXX_COMPILER=mpicxx \
    -DCMAKE_C_FLAGS="-g -O3 -inline-forceinline -vec-threshold0 \
                     -qopt-report=5 -qopt-report-phase=all -Winline \
                     -qoverride-limits -rdynamic -dynamic \
                     -no-ansi-alias" \
    -DCMAKE_CXX_FLAGS="-g -O3 -inline-forceinline -vec-threshold0 \
                       -qopt-report=5 -qopt-report-phase=all -Winline \
                       -qoverride-limits -rdynamic -dynamic \
                       -no-ansi-alias" \
    ..
  make -j $NJ VERBOSE=1
fi

################################################################################
# Build an optimized version of VPIC with Intel compilers.

if [ $ARCH = "SNOW_OMP_INT_OPT_V4_PORT" ]; then
  module load friendly-testing
  module load sandbox
  module load cmake
  module swap cmake cmake/$VERSION_CMAKE
  module load intel
  module swap intel intel/$VERSION_INTEL

  module list

  export MPI_ROOT=$MPICH_DIR

  cd $VPIC_DIR
  mkdir build
  cd build
  cmake \
    -LAH \
    -DCMAKE_BUILD_TYPE=None \
    -DENABLE_COLOR_UNIT_TESTS=ON \
    -DENABLE_INTEGRATED_TESTS=ON \
    -DENABLE_UNIT_TESTS=ON \
    -DUSE_V4_PORTABLE=ON \
    -DVPIC_PRINT_MORE_DIGITS=ON \
    -DUSE_OPENMP=ON \
    -DUSE_PTHREADS=OFF \
    -DCMAKE_C_COMPILER=mpicc \
    -DCMAKE_CXX_COMPILER=mpicxx \
    -DCMAKE_C_FLAGS="-g -O3 -inline-forceinline -vec-threshold0 \
                     -qopt-report=5 -qopt-report-phase=all -Winline \
                     -qoverride-limits -rdynamic -dynamic" \
    -DCMAKE_CXX_FLAGS="-g -O3 -inline-forceinline -vec-threshold0 \
                       -qopt-report=5 -qopt-report-phase=all -Winline \
                       -qoverride-limits -rdynamic -dynamic" \
    ..
  make -j $NJ VERBOSE=1
fi

################################################################################
# Build an optimized version of VPIC with Intel compilers.

if [ $ARCH = "SNOW_OMP_INT_OPT_V4_SSE" ]; then
