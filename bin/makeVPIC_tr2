    -DENABLE_UNIT_TESTS=ON \
    -DUSE_V4_PORTABLE=ON \
    -DUSE_V8_PORTABLE=ON \
    -DVPIC_PRINT_MORE_DIGITS=ON \
    -DUSE_OPENMP=OFF \
