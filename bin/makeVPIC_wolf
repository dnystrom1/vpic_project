#!/bin/bash

################################################################################
# Set some high level variables.

ARCH=$1

BRANCH=$2

NJ=$3

VPIC_ROOT=$PWD

export VPIC_DIR=$VPIC_ROOT/build/$ARCH/vpic

################################################################################
# Switch to the build directory and copy the VPIC source.  First check for the
# existence of an old VPIC directory and remove it if it does exist.

cd build

if [ -d $ARCH ]; then
  rm -rf $ARCH
fi

mkdir $ARCH
cd $ARCH

cp -R $VPIC_ROOT/src/branches/$BRANCH/vpic .

cd $VPIC_DIR

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "WF_MASTER_LINUX_GNU_OPT_OPENMPI" ]; then
  module purge
  module load friendly-testing
  module load gcc/4.8.2
  module load openmpi/1.7.4

  cd $VPIC_DIR
  config/bootstrap
  configure \
      --with-machine=standard \
      --prefix=$VPIC_DIR
  make
# make check
fi

################################################################################
# Build an optimized version of VPIC with GNU compilers.

if [ $ARCH = "WF_TAG_407_LINUX_GNU_OPT_OPENMPI" ]; then
  module purge
  module load friendly-testing
  module load gcc/4.8.2
  module load openmpi/1.7.4

  cd $VPIC_DIR
  config/bootstrap
  configure \
      --with-machine=standard_64 \
      --prefix=$VPIC_DIR
  make
fi

################################################################################
