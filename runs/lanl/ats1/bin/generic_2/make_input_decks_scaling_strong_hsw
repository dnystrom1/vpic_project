#!/bin/bash

#######################################################################
# Documentation of run parameters.
#
# $1 = np
# $2 = nnodes
# $3 = nppn
# $4 = ntpp
# $5 = nppc
# $6 = nstep
# $7 = nrestart
# $8 = size
#
#######################################################################
# Create the input decks for 2 ranks/core i.e. MPI only case.

#------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6 $7   $8
#------------------------------------------------------
./make_input_decks 0000001 0001 001 001 320 61 1500 ddr
./make_input_decks 0000002 0001 002 001 320 61 1500 ddr
./make_input_decks 0000004 0001 004 001 320 61 1500 ddr
./make_input_decks 0000008 0001 008 001 320 61 1500 ddr
./make_input_decks 0000016 0001 016 001 320 61 1500 ddr
./make_input_decks 0000032 0001 032 001 320 61 1500 ddr
./make_input_decks 0000064 0001 064 001 320 61 1500 ddr

./make_input_decks 0000128 0002 064 001 320 61 1500 ddr
./make_input_decks 0000256 0004 064 001 320 61 1500 ddr
./make_input_decks 0000512 0008 064 001 320 61 1500 ddr

#------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6 $7   $8
#------------------------------------------------------
./make_input_decks 0000001 0001 001 001  40 61 1500 hbm
./make_input_decks 0000002 0001 002 001  40 61 1500 hbm
./make_input_decks 0000004 0001 004 001  40 61 1500 hbm
./make_input_decks 0000008 0001 008 001  40 61 1500 hbm
./make_input_decks 0000016 0001 016 001  40 61 1500 hbm
./make_input_decks 0000032 0001 032 001  40 61 1500 hbm
./make_input_decks 0000064 0001 064 001  40 61 1500 hbm

#######################################################################
# Create the input decks for 1 rank/core i.e. MPI only case.

#------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6 $7   $8
#------------------------------------------------------
./make_input_decks 0000064 0002 032 001 320 61 1500 ddr
./make_input_decks 0000128 0004 032 001 320 61 1500 ddr
./make_input_decks 0000256 0008 032 001 320 61 1500 ddr

#######################################################################
# Create the input decks for 1 rank/core, 2 threads/rank i.e. MPI +
# threads case.

#------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6 $7   $8
#------------------------------------------------------
./make_input_decks 0000001 0001 001 002 320 61 1500 ddr
./make_input_decks 0000002 0001 002 002 320 61 1500 ddr
./make_input_decks 0000004 0001 004 002 320 61 1500 ddr
./make_input_decks 0000008 0001 008 002 320 61 1500 ddr
./make_input_decks 0000016 0001 016 002 320 61 1500 ddr
./make_input_decks 0000032 0001 032 002 320 61 1500 ddr

./make_input_decks 0000064 0002 032 002 320 61 1500 ddr
./make_input_decks 0000128 0004 032 002 320 61 1500 ddr
./make_input_decks 0000256 0008 032 002 320 61 1500 ddr

#------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6 $7   $8
#------------------------------------------------------
./make_input_decks 0000001 0001 001 002  40 61 1500 hbm
./make_input_decks 0000002 0001 002 002  40 61 1500 hbm
./make_input_decks 0000004 0001 004 002  40 61 1500 hbm
./make_input_decks 0000008 0001 008 002  40 61 1500 hbm
./make_input_decks 0000016 0001 016 002  40 61 1500 hbm
./make_input_decks 0000032 0001 032 002  40 61 1500 hbm
