#!/bin/bash

#######################################################################
# Documentation of run parameters.
#
# $1 = np
# $2 = nnodes
# $3 = nppn
# $4 = ntpp
# $5 = nppc
# $6 = nstep
# $7 = nrestart
# $8 = size
#
#######################################################################
# Create the input decks for 2 ranks/core i.e. MPI only case.

#---------------------------------------------------
#                $1    $2   $3  $4  $5  $6  $7   $8 
#---------------------------------------------------
make_input_decks 00001 0001 001 001 150 301 1500 ddr
make_input_decks 00002 0001 002 001 150 301 1500 ddr
make_input_decks 00004 0001 004 001 150 301 1500 ddr
make_input_decks 00008 0001 008 001 150 301 1500 ddr
make_input_decks 00016 0001 016 001 150 301 1500 ddr
make_input_decks 00032 0001 032 001 150 301 1500 ddr
make_input_decks 00064 0001 064 001 150 301 1500 ddr

make_input_decks 00128 0002 064 001 150 301 1500 ddr

make_input_decks 00256 0004 064 001 150 301 1500 ddr

#---------------------------------------------------
#                $1    $2   $3  $4  $5  $6  $7   $8 
#---------------------------------------------------
make_input_decks 00001 0001 001 001  20 301 1500 hbm
make_input_decks 00002 0001 002 001  20 301 1500 hbm
make_input_decks 00004 0001 004 001  20 301 1500 hbm
make_input_decks 00008 0001 008 001  20 301 1500 hbm
make_input_decks 00016 0001 016 001  20 301 1500 hbm
make_input_decks 00032 0001 032 001  20 301 1500 hbm
make_input_decks 00064 0001 064 001  20 301 1500 hbm

#######################################################################
# Create the input decks for 1 rank/core i.e. MPI only case.

#---------------------------------------------------
#                $1    $2   $3  $4  $5  $6  $7   $8 
#---------------------------------------------------
make_input_decks 00064 0002 032 001 150 301 1500 ddr

make_input_decks 00128 0004 032 001 150 301 1500 ddr

make_input_decks 00256 0008 032 001 150 301 1500 ddr

#######################################################################
# Create the input decks for 1rank/core, 2 threads/rank i.e. MPI +
# threads case.

#---------------------------------------------------
#                $1    $2   $3  $4  $5  $6  $7   $8 
#-------------------------------------------- ------
make_input_decks 00001 0001 001 002 150 301 1500 ddr
make_input_decks 00002 0001 002 002 150 301 1500 ddr
make_input_decks 00004 0001 004 002 150 301 1500 ddr
make_input_decks 00008 0001 008 002 150 301 1500 ddr
make_input_decks 00016 0001 016 002 150 301 1500 ddr
make_input_decks 00032 0001 032 002 150 301 1500 ddr

make_input_decks 00064 0002 032 002 150 301 1500 ddr

make_input_decks 00128 0004 032 002 150 301 1500 ddr

make_input_decks 00256 0008 032 002 150 301 1500 ddr

#---------------------------------------------------
#                $1    $2   $3  $4  $5  $6  $7   $8 
#---------------------------------------------------
make_input_decks 00001 0001 001 002  20 301 1500 hbm
make_input_decks 00002 0001 002 002  20 301 1500 hbm
make_input_decks 00004 0001 004 002  20 301 1500 hbm
make_input_decks 00008 0001 008 002  20 301 1500 hbm
make_input_decks 00016 0001 016 002  20 301 1500 hbm
make_input_decks 00032 0001 032 002  20 301 1500 hbm
