${aprun} -n   2 -N 1 -c 2 --cpu_bind=threads ${voc} ${vtime} ${vnuma} ${xpre}${prob}_ddr_nn_0001_nppn_002_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0001_nppn_002_nrpc_002.log

