#!/bin/bash

#######################################################################
# Documentation of run parameters.
#
# $1 = np
# $2 = nnodes
# $3 = nppn
# $4 = ntpp
# $5 = nppc
# $6 = nstep
# $7 = nrestart
# $8 = size
#
#######################################################################

make_input_deck=./make_input_decks

#######################################################################
# Create the input decks for 1 thread/rank i.e. MPI only case and HT
# disabled.

#--------------------------------------------------------
#                  $1      $2   $3  $4  $5   $6  $7   $8
#--------------------------------------------------------
${make_input_deck} 0000001 0001 001 001 1024 100 1500 ddr
${make_input_deck} 0000002 0001 002 001 1024 100 1500 ddr
${make_input_deck} 0000004 0001 004 001 1024 100 1500 ddr
${make_input_deck} 0000008 0001 008 001 1024 100 1500 ddr
${make_input_deck} 0000016 0001 016 001 1024 100 1500 ddr
${make_input_deck} 0000032 0001 032 001 1024 100 1500 ddr
${make_input_deck} 0000056 0001 056 001 1024 100 1500 ddr

#--------------------------------------------------------
#                  $1      $2   $3  $4  $5   $6  $7   $8
#--------------------------------------------------------
${make_input_deck} 0000001 0001 001 001 1024 100 1500 hbm
${make_input_deck} 0000002 0001 002 001 1024 100 1500 hbm
${make_input_deck} 0000004 0001 004 001 1024 100 1500 hbm
${make_input_deck} 0000008 0001 008 001 1024 100 1500 hbm
${make_input_deck} 0000016 0001 016 001 1024 100 1500 hbm
${make_input_deck} 0000032 0001 032 001 1024 100 1500 hbm
${make_input_deck} 0000056 0001 056 001 1024 100 1500 hbm

#######################################################################
# Create the input decks for 1 thread/rank i.e. MPI only case and HT
# enabled.

#--------------------------------------------------------
#                  $1      $2   $3  $4  $5   $6  $7   $8
#--------------------------------------------------------
${make_input_deck} 0000064 0001 064 001 1024 100 1500 ddr
${make_input_deck} 0000112 0001 112 001 1024 100 1500 ddr

#--------------------------------------------------------
#                  $1      $2   $3  $4  $5   $6  $7   $8
#--------------------------------------------------------
${make_input_deck} 0000064 0001 064 001 1024 100 1500 hbm
${make_input_deck} 0000112 0001 112 001 1024 100 1500 hbm

#######################################################################
# Create the input decks for 2 threads/rank and HT enabled.

#--------------------------------------------------------
#                  $1      $2   $3  $4  $5   $6  $7   $8
#--------------------------------------------------------
${make_input_deck} 0000001 0001 001 002 1024 100 1500 ddr
${make_input_deck} 0000002 0001 002 002 1024 100 1500 ddr
${make_input_deck} 0000004 0001 004 002 1024 100 1500 ddr
${make_input_deck} 0000008 0001 008 002 1024 100 1500 ddr
${make_input_deck} 0000016 0001 016 002 1024 100 1500 ddr
${make_input_deck} 0000032 0001 032 002 1024 100 1500 ddr
${make_input_deck} 0000056 0001 056 002 1024 100 1500 ddr

#--------------------------------------------------------
#                  $1      $2   $3  $4  $5   $6  $7   $8
#--------------------------------------------------------
${make_input_deck} 0000001 0001 001 002 1024 100 1500 hbm
${make_input_deck} 0000002 0001 002 002 1024 100 1500 hbm
${make_input_deck} 0000004 0001 004 002 1024 100 1500 hbm
${make_input_deck} 0000008 0001 008 002 1024 100 1500 hbm
${make_input_deck} 0000016 0001 016 002 1024 100 1500 hbm
${make_input_deck} 0000032 0001 032 002 1024 100 1500 hbm
${make_input_deck} 0000056 0001 056 002 1024 100 1500 hbm
