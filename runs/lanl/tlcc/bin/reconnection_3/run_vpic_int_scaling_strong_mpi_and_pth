#!/bin/bash

##############################################################################################################################################
# Configure modules.

module load friendly-testing
module load sandbox
module load intel
module load openmpi

module list

##############################################################################################################################################
# Preliminary stuff.

prob='reconnection'

vtime='/usr/bin/time -p'

voc='--vm-overcommit=enable'

##############################################################################################################################################
# Define some useful variables to tame the command lines when using the low level process binding interface.

cpu_list_rpc1_16_socket_0="0,1,2,3,4,5,6,7"
cpu_list_rpc1_16_socket_1="8,9,10,11,12,13,14,15"

cpu_list_rpc1_08_socket_0="0,1,2,3"
cpu_list_rpc1_08_socket_1="8,9,10,11"

cpu_list_rpc1_04_socket_0="0,1"
cpu_list_rpc1_04_socket_1="8,9"

cpu_list_rpc1_02_socket_0="0"
cpu_list_rpc1_02_socket_1="8"

cpu_list_rpc1_01_socket_0="0"

cpu_bind_rpc1_16="--cpu_bind=map_cpu:${cpu_list_rpc1_16_socket_0},${cpu_list_rpc1_16_socket_1}"
cpu_bind_rpc1_08="--cpu_bind=map_cpu:${cpu_list_rpc1_08_socket_0},${cpu_list_rpc1_08_socket_1}"
cpu_bind_rpc1_04="--cpu_bind=map_cpu:${cpu_list_rpc1_04_socket_0},${cpu_list_rpc1_04_socket_1}"
cpu_bind_rpc1_02="--cpu_bind=map_cpu:${cpu_list_rpc1_02_socket_0},${cpu_list_rpc1_02_socket_1}"
cpu_bind_rpc1_01="--cpu_bind=map_cpu:${cpu_list_rpc1_01_socket_0}"

##############################################################################################################################################
# Large DDR problem, strong scaled across 8 nodes.

##############################################################################################################################################
# MPI + Pthreads, 1 rank/core, 1 thread/rank.

srun -n 128 -N 8 ${cpu_bind_rpc1_16} ${voc} ${vtime} ${prob}_ddr_nn_0008_nppn_016_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0008_nppn_016_nrpc_001.log
srun -n  64 -N 4 ${cpu_bind_rpc1_16} ${voc} ${vtime} ${prob}_ddr_nn_0004_nppn_016_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0004_nppn_016_nrpc_001.log
srun -n  32 -N 2 ${cpu_bind_rpc1_16} ${voc} ${vtime} ${prob}_ddr_nn_0002_nppn_016_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0002_nppn_016_nrpc_001.log

srun -n  16 -N 1 ${cpu_bind_rpc1_16} ${voc} ${vtime} ${prob}_ddr_nn_0001_nppn_016_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0001_nppn_016_nrpc_001.log
srun -n   8 -N 1 ${cpu_bind_rpc1_08} ${voc} ${vtime} ${prob}_ddr_nn_0001_nppn_008_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0001_nppn_008_nrpc_001.log
srun -n   4 -N 1 ${cpu_bind_rpc1_04} ${voc} ${vtime} ${prob}_ddr_nn_0001_nppn_004_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0001_nppn_004_nrpc_001.log
srun -n   2 -N 1 ${cpu_bind_rpc1_02} ${voc} ${vtime} ${prob}_ddr_nn_0001_nppn_002_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0001_nppn_002_nrpc_001.log
srun -n   1 -N 1 ${cpu_bind_rpc1_01} ${voc} ${vtime} ${prob}_ddr_nn_0001_nppn_001_ntpp_001.Linux --tpp 1 >& ${prob}_ddr_nn_0001_nppn_001_nrpc_001.log

##############################################################################################################################################
# Small HBM problem, strong scaled across 1 node.

##############################################################################################################################################
# MPI + Pthreads, 1 rank/core, 1 thread/rank.

srun -n  16 -N 1 ${cpu_bind_rpc1_16} ${voc} ${vtime} ${prob}_hbm_nn_0001_nppn_016_ntpp_001.Linux --tpp 1 >& ${prob}_hbm_nn_0001_nppn_016_nrpc_001.log
srun -n   8 -N 1 ${cpu_bind_rpc1_08} ${voc} ${vtime} ${prob}_hbm_nn_0001_nppn_008_ntpp_001.Linux --tpp 1 >& ${prob}_hbm_nn_0001_nppn_008_nrpc_001.log
srun -n   4 -N 1 ${cpu_bind_rpc1_04} ${voc} ${vtime} ${prob}_hbm_nn_0001_nppn_004_ntpp_001.Linux --tpp 1 >& ${prob}_hbm_nn_0001_nppn_004_nrpc_001.log
srun -n   2 -N 1 ${cpu_bind_rpc1_02} ${voc} ${vtime} ${prob}_hbm_nn_0001_nppn_002_ntpp_001.Linux --tpp 1 >& ${prob}_hbm_nn_0001_nppn_002_nrpc_001.log
srun -n   1 -N 1 ${cpu_bind_rpc1_01} ${voc} ${vtime} ${prob}_hbm_nn_0001_nppn_001_ntpp_001.Linux --tpp 1 >& ${prob}_hbm_nn_0001_nppn_001_nrpc_001.log
