#!/bin/bash

#######################################################################
# Build executables for 1 thread/rank i.e. MPI only case.

vpic lpi_hbm_nn_0001_nppn_001_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_002_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_004_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_008_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_016_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_032_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_064_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_128_ntpp_001.cxx
vpic lpi_hbm_nn_0001_nppn_256_ntpp_001.cxx

#######################################################################
# Build executables for 2 threads/rank.

vpic lpi_hbm_nn_0001_nppn_001_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_002_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_004_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_008_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_016_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_032_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_064_ntpp_002.cxx
vpic lpi_hbm_nn_0001_nppn_128_ntpp_002.cxx

#######################################################################
# Build executables for 4 threads/rank.

vpic lpi_hbm_nn_0001_nppn_001_ntpp_004.cxx
vpic lpi_hbm_nn_0001_nppn_002_ntpp_004.cxx
vpic lpi_hbm_nn_0001_nppn_004_ntpp_004.cxx
vpic lpi_hbm_nn_0001_nppn_008_ntpp_004.cxx
vpic lpi_hbm_nn_0001_nppn_016_ntpp_004.cxx
vpic lpi_hbm_nn_0001_nppn_032_ntpp_004.cxx
vpic lpi_hbm_nn_0001_nppn_064_ntpp_004.cxx
