#!/bin/bash

aprun -n 32 -S 16 -d 2 -j 2 /usr/bin/time -p reconnection_hbm_nn_0001_nppn_032.Linux --tpp 2 >& run_reconnection_hbm_nn_0001_nppn_032_002.log
aprun -n 16 -S  8 -d 2 -j 2 /usr/bin/time -p reconnection_hbm_nn_0001_nppn_016.Linux --tpp 2 >& run_reconnection_hbm_nn_0001_nppn_016_002.log
