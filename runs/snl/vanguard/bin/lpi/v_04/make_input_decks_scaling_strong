#!/bin/bash

#######################################################################
# Documentation of run parameters.
#
# $1 = np
# $2 = nnodes
# $3 = nppn
# $4 = ntpp
# $5 = nppc
# $6 = nstep
# $7 = nrestart
# $8 = size
#
#######################################################################

make_input_deck=./make_input_decks

#######################################################################
# Create the input decks for 4 ranks/core, 1 thread/rank i.e. MPI
# only case.

#-------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6  $7   $8
#-------------------------------------------------------
${make_input_deck} 0000001 0001 001 001 512 100 1500 ddr
${make_input_deck} 0000002 0001 002 001 512 100 1500 ddr
${make_input_deck} 0000004 0001 004 001 512 100 1500 ddr
${make_input_deck} 0000008 0001 008 001 512 100 1500 ddr
${make_input_deck} 0000016 0001 016 001 512 100 1500 ddr
${make_input_deck} 0000032 0001 032 001 512 100 1500 ddr
${make_input_deck} 0000056 0001 056 001 512 100 1500 ddr
${make_input_deck} 0000064 0001 064 001 512 100 1500 ddr
${make_input_deck} 0000112 0001 112 001 512 100 1500 ddr
${make_input_deck} 0000128 0001 128 001 512 100 1500 ddr
${make_input_deck} 0000224 0001 224 001 512 100 1500 ddr

#-------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6  $7   $8
#-------------------------------------------------------
${make_input_deck} 0000001 0001 001 001 512 100 1500 hbm
${make_input_deck} 0000002 0001 002 001 512 100 1500 hbm
${make_input_deck} 0000004 0001 004 001 512 100 1500 hbm
${make_input_deck} 0000008 0001 008 001 512 100 1500 hbm
${make_input_deck} 0000016 0001 016 001 512 100 1500 hbm
${make_input_deck} 0000032 0001 032 001 512 100 1500 hbm
${make_input_deck} 0000056 0001 056 001 512 100 1500 hbm
${make_input_deck} 0000064 0001 064 001 512 100 1500 hbm
${make_input_deck} 0000112 0001 112 001 512 100 1500 hbm
${make_input_deck} 0000128 0001 128 001 512 100 1500 hbm
${make_input_deck} 0000224 0001 224 001 512 100 1500 hbm

#######################################################################
# Create the input decks for 1 rank/core, 4 threads/rank i.e. MPI +
# threads case.

#-------------------------------------------------------
#                  $1      $2   $3  $4  $5  $6  $7   $8
#-------------------------------------------------------
${make_input_deck} 0000001 0001 001 004 512 100 1500 ddr
${make_input_deck} 0000002 0001 002 004 512 100 1500 ddr
${make_input_deck} 0000004 0001 004 004 512 100 1500 ddr
${make_input_deck} 0000008 0001 008 004 512 100 1500 ddr
${make_input_deck} 0000016 0001 016 004 512 100 1500 ddr
${make_input_deck} 0000032 0001 032 004 512 100 1500 ddr
${make_input_deck} 0000056 0001 056 004 512 100 1500 ddr

#-------------------------------------------------------
